# Production Environment Variables Template
# Copy this to your deployment platform (AWS ECS, Heroku, etc.)
# NEVER commit actual production values to git!

# Database Configuration (AWS RDS Aurora)
DATABASE_URL=postgresql://username:password@your-aurora-cluster.region.rds.amazonaws.com:5432/portfolio_production

# Redis Configuration (AWS ElastiCache)
REDIS_URL=redis://your-elasticache.region.cache.amazonaws.com:6379/0

# JWT Authentication
# Generate with: rails secret (or openssl rand -hex 32)
JWT_SECRET=CHANGE_THIS_TO_A_RANDOM_64_CHARACTER_STRING_IN_PRODUCTION

# Email Configuration (Production SMTP - Gmail, SendGrid, AWS SES, etc.)
SMTP_ADDRESS=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USERNAME=apikey
SMTP_PASSWORD=your_sendgrid_api_key
SMTP_DOMAIN=justinnegron.dev
FROM_EMAIL=hello@justinnegron.dev

# Frontend URL (Your production domain)
FRONTEND_URL=https://justinnegron.dev

# AWS Configuration (for S3 uploads, CloudWatch, etc.)
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY
AWS_REGION=us-east-1
S3_BUCKET=portfolio-uploads-production

# Rails Configuration
RAILS_ENV=production
RAILS_MAX_THREADS=5
RAILS_LOG_LEVEL=info
RAILS_SERVE_STATIC_FILES=true
RAILS_LOG_TO_STDOUT=true

# Secret Key Base (Generate with: rails secret)
SECRET_KEY_BASE=CHANGE_THIS_TO_A_RANDOM_128_CHARACTER_STRING_IN_PRODUCTION

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=300

# Analytics
ANALYTICS_ENABLED=true

# Force SSL
FORCE_SSL=true

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=justinnegron.dev,www.justinnegron.dev